<header>
  <h1>Bench Press Details!</h1> 

  <% results.each do |i| %>
        <h2>Your current <%= i["reps"] %> rep max is <%= i["weight"] %> and was performed on the <%= i["date"] %></h2>
  <% end %>
</header>

<main>

  <div class="graph"
  <%= line_chart(data_array)%>
  </div>


  <div class="edit">
    <div>
      <form action="/bpress" method="POST">
        <label for="weight">
            Weight:
        </label>
        <input name="weight"/>

        <label for="reps">
            Reps:
        </label>
        <input name="reps" />

        <label for="Date">
            Date:
        </label>
        <input name="date" type="date"/>
    </div>
    <div class='submit'>
      <input type="submit" value="Add New Record" />
    </div>
    </form>
  </div>

  

  <div class="dropdown">
    <span>Lift Records</span>
    <div class="dropdown-content">
      <table>
        <tr>
          <th> Reps</th>
          <th> Weights</th>
          <th> Date</th>
          <th> Edit</th>
        </tr>
          <% results2.each do |i| %>
          <tr>
          <td><%= i["reps"] %></td>
          <td><%= i["weight"] %></td>
          <td><%= i["date"] %></td>
          <td><a href="/bpress/<%= i["id"] %>/edit"> Edit </a></td>
          </tr>
          <% end %>
      </table>
    </div>  
  </div>

</main>
